{
  "$id": "./settings_uservalues_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Settings User Values Export/Import Schema",
  "description": "",
  "type": "object",
  "properties": {
    "Version": {
      "type": "integer",
      "minimum": 1
    },
    "Data": {
      "type": "object",
      "properties": {
        "Components": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Component"
          }
        }
      },
      "required": [
        "Components"
      ]
    }
  },
  "required": [
    "Version",
    "Data"
  ],
  "$defs": {
    "Component": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string",
          "description": "The name of the component."
        },
        "UserValues": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/UserValues"
          }
        }
      },
      "required": [
        "Name",
        "UserValues"
      ]
    },
    "UserValues": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string",
          "description": "Name of the setting."
        },
        "Type": {
          "enum": [
            "Bool",
            "Int8",
            "Uint8",
            "Int16",
            "Uint16",
            "Int32",
            "Uint32",
            "Int64",
            "Uint64",
            "Float",
            "String"
          ],
          "description": "The type of the user value."
        },
        "Value": {
          "type": [
            "number",
            "string",
            "boolean"
          ],
          "description": "The actual user value of the setting."
        }
      },
      "required": [
        "Name",
        "Type",
        "Value"
      ]
    }
  }
}